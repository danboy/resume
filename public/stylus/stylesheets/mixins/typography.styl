set-baseline(font-size=14px)
  margin: 0 0 baseline
  padding: 0
  line-height: baseline
  font-size: font-size
  vertical-align: "baseline"
  white-space: normal
  if font-size > baseline
    line-height: (baseline*2)


body
  font: 14px font-family
h1
  set-baseline(24px)
h2
  set-baseline(22px)
h3
  set-baseline(20px)
h4
  set-baseline(18px)
h5
  set-baseline(16px)
.cap
  margin-bottom: 0
h2,h3
  position: relative
  top: 1px
p,ul,ol
  position: relative
  top: 4px
label
  position: relative
  top: 3px
*
  padding: 0;
  margin: 0;
  set-baseline(14px)
pre
  border: 1px solid form-border
  white-space: pre
  margin: 0 
  padding: ((baseline/2) - 1) (baseline/2)
blockquote
  set-baseline(18px)
  border-left: (baseline/2) solid link-color
  margin-left: (baseline/2)
  padding-left: (baseline/2)
  font-weight: bold
  position: relative
  top: 3px

h1,h2,h3,h4,h5,p
  margin: 0 0 baseline
  line-height: baseline
