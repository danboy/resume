body
  color: #F9F9F9
  font: 14px font-family
  a
    color: #EFEFEF
  dl
    &:before,
    &:after
      display: table
      content: ""
    &:after 
      clear: both
    dt,
    dd
      float: left
    dt
      font-weight: bold
      clear: left
      margin-right: 10px
      &:after
        content: ":"
  menu
    li
      list-style: none
      display: inline-block
      padding: 0 4px
      a
        text-decoration: none
        color: #E0E0E0
  .typeahead
    li
      list-style: none
      border: 1px solid #EEE
      border-top: 0 none;
      margin: 0
      &:first-child
        border: 1px solid #EEE
  .stage
    width: 90%
    height: 90%
    padding: 5%
    margin: 0
    background-color: #fff;
    h1
      font-size: 75px
      line-height: 75px
      margin: -5% 20px 0 -5%
    &.groupon
      background-color: #8ab657
    &.selfEmployed
      background-color: #FFC00C
    &.kanbay
      background-color: #bf2f38
    &.crossAccess
      background-color: #089494
    &.current
      position: fixed
      left: 0
      top: 0
      z-index: 99
    &.groupon
      background-color: #FFF
    &.selfEmployed
      background-color: #FFFCFC
    &.kanbay
      background-color: #FFFDFE
    &.crossAccess
      background-color: #FCFDFE
